{
  "compilerOptions": {
    /* Project Structure */
    "rootDir": "./",
    "outDir": "./dist",

    /* Node Environment */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",

    /* Type Support */
    "types": ["node", "express"],

    /* Output Settings */
    "sourceMap": true,

    /* Strictness */
    "strict": true,

    /* Compatibility */
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Skip Noise */
    "skipLibCheck": true
  }
}
